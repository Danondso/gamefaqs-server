{
  "name": "gamefaqs-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docker:build": "docker build -t gamefaqs-server .",
    "docker:run": "docker-compose up"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A REST API server that hosts the complete GameFAQs guide archive. On first startup, the server automatically downloads the archive from Internet Archive (~2.2GB), extracts it, and imports all guides to SQLite. The server provides REST API endpoints for the mobile app plus a web-based admin panel for monitoring and management.",
  "dependencies": {
    "axios": "^1.13.4",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "nanoid": "^5.1.6",
    "node-7z": "^3.0.0",
    "ollama": "^0.6.3",
    "swagger-ui-express": "^5.0.1",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yauzl": "^2.10.3",
    "@vitest/coverage-v8": "^4.0.18",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
